---
import ProjectLayout from '@/layouts/ProjectLayout.astro';
import { projectApi } from '@/api/project';
import { ProjectIdentity } from '@/components/ProjectIdentities/ProjectIdentity';

const { currentUser } = Astro.locals;
if (!currentUser) {
  return Astro.redirect('/login');
}

const { projectId, identityId } = Astro.params as {
  projectId: string;
  identityId: string;
};

if (!projectId) {
  return Astro.redirect('/projects');
}

const projectClient = projectApi(Astro);
const { response: project, error: projectError } =
  await projectClient.getProject(projectId);
---

<ProjectLayout
  title={project?.name || projectError?.message || 'Project'}
  project={{
    id: project?.id,
    name: project?.name,
  }}
  projectError={projectError}
  projectId={projectId}
  identityId={identityId}
>
  <div class='mx-auto max-w-3xl py-12'>
    <ProjectIdentity
      projectId={projectId}
      identityId={identityId}
      client:load
    />
  </div>
</ProjectLayout>
